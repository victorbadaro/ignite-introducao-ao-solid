{
  "openapi": "3.0.2",
  "info": {
    "title": "Atlas",
    "description": "Essa é uma documentação sobre a Atlas API.",
    "version": "1.0.0",
    "contact": {
      "name": "Victor Badaró",
      "email": "victor.badaro@fatec.sp.gov.br",
      "url": "https://github.com/victorbadaro"
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "Gerenciamento de usuários"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Cria um novo usuário.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Michael Jordan",
                  "email": "michael.jordan@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "9b2e9024-d227-4c7f-8541-ec60d47dfff6",
                    "name": "Michael Jordan",
                    "email": "michael.jordan@email.com",
                    "created_at": "2023-10-07T21:05:06.813Z",
                    "updated_at": "2023-10-07T21:05:06.813Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already taken!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Email already taken!"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retorna todos os usuários.",
        "description": "Somente usuário `admin` pode acessar.",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "admin": true,
                      "id": "676ca250-8949-4727-a727-52b5fd45a2a3",
                      "name": "Kobe Bryant",
                      "email": "kobe.bryant@email.com",
                      "created_at": "2023-10-08T03:10:14.700Z",
                      "updated_at": "2023-10-08T03:10:14.700Z"
                    },
                    {
                      "admin": false,
                      "id": "9b2e9024-d227-4c7f-8541-ec60d47dfff6",
                      "name": "Michael Jordan",
                      "email": "michael.jordan@email.com",
                      "created_at": "2023-10-07T21:05:06.813Z",
                      "updated_at": "2023-10-07T21:05:06.813Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "The users list is only for admin users!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retorna um usuário específico.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "description": "ID do usuário",
            "required": true,
            "schema": {
              "example": "user_id - ID do usuário"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "9b2e9024-d227-4c7f-8541-ec60d47dfff6",
                    "name": "Michael Jordan",
                    "email": "michael.jordan@email.com",
                    "created_at": "2023-10-07T21:05:06.813Z",
                    "updated_at": "2023-10-07T21:05:06.813Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not exists!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Torna admin um usuário.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": true,
                    "id": "9b2e9024-d227-4c7f-8541-ec60d47dfff6",
                    "name": "Michael Jordan",
                    "email": "michael.jordan@email.com",
                    "created_at": "2023-10-07T21:05:06.813Z",
                    "updated_at": "2023-10-07T21:05:06.813Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not exists!"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}